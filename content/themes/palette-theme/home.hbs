{{!< default}}
{{> header}}
<main class="home">
  <div class="fx-row fx-row-center-l">
    <div class="fx-col-80-l">
        {{#foreach posts}}
            {{#has tag="home"}}
            <article class="home {{post_class}}" role="article" itemscope itemtype="http://schema.org/Article">
            <header class="home--postheader">
                <h1 class="home--posttitle" itemprop="headline">{{title}}</h1>
            </header>
            <div class="home--postcontent" itemprop="articleBody">
            {{#if image}}
                <img src="{{image}}" alt="{{title}}">
            {{/if}}
              {{content}}
            </div>
          </article>
          {{/has}}
        {{/foreach}}
    </div>
  </div>
  <div class="fx-row fx-row-center-l">
    <div class="fx-col-80-l contact">
        <h3 class="contact--title">Votre demande de personnalis√©e</h3>
        <div class="fx-col-80-l">
            {{!-- TODO align button and text inside the button --}}
            <a class="contact--btn btn--transition btn--hover">Contactez-nous</a>
        </div>
    </div>
  </div>
</main>
{{> footer}}
