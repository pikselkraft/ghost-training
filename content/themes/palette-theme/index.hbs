{{!< default}}
{{> header}}
  <div class="fx-row fx-row-start-l">
    <div class="fx-col-90-l">
    {{#foreach posts}}
        <article class="post {{post_class}}" role="article" itemscope itemtype="http://schema.org/Article">
        <header class="post--header">
          <time class="podt--date" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">
          <h1 class="post--title" itemprop="headline"><a href="{{{url}}}" rel="bookmark">{{title}}</a></h1>
        </header>
        <div class="post--content" itemprop="articleBody">
        {{#if image}}
            <img src="{{image}}" alt="{{title}}">
        {{/if}}
          <p class="author">Written by {{author}}</p>
          {{content}}
        </div>
        {{#if tags}}
        <div class="tags">
          Tags: {{tags separator=" | "}}
        </div>
        {{/if}}
      </article>
    {{/foreach}}
    </div>
  </div>
  <div class="fx-row">
    <div class="fx-col-100">
      {{#if pagination}}
        <div class="pagination">
          {{{pagination}}}
        </div>
      {{/if}}
    </div>
  </div>
{{> footer}}
